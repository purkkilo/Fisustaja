{
  "name": "fisujs",
  "version": "0.2.0",
  "description": "web app for fisustaja",
  "main": "main.js",
  "scripts": {
    "start": "node --env-file=.env server/index.js",
    "server": "nodemon --env-file=.env server/index.js",
    "dev": "concurrently \" cd server && nodemon --env-file=../.env index.js\" \"cd client && npm run serve\"",
    "build-app": "cd client && npm run build",
    "postinstall": "cd client && npm install && npm run build"
  },
  "author": "Jori Kosonen",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "connect-history-api-fallback": "^2.0.0",
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "6.9",
    "mongoose": "^8.7.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "nodemon": "^3.1.7"
  }
}
